{
    "openapi": "3.0.0",
    "info": {
        "title": "Vending Machine API",
        "version": "1.0.0",
        "description": "API to buy, restock chocolates and view inventory"
    },
    "servers": [
        {
            "url": "http://localhost:3000/api/v1"
        }
    ],
    "paths": {
        "/inventory": {
            "get": {
                "summary": "Get inventory and user cash",
                "responses": {
                    "200": {
                        "description": "List of chocolates and user's remaining cash"
                    }
                }
            }
        },
        "/buy": {
            "post": {
                "summary": "Buy a chocolate",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "chocolateName",
                                    "insertedCash",
                                    "quantity"
                                ],
                                "properties": {
                                    "chocolateName": {
                                        "type": "string",
                                        "example": "Ferrero"
                                    },
                                    "insertedCash": {
                                        "type": "number",
                                        "example": 100
                                    },
                                    "quantity": {
                                        "type": "number",
                                        "example": 2
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Purchase successful",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "2 Ferrero purchased successfully"
                                        },
                                        "totalPrice": {
                                            "type": "number",
                                            "example": 80
                                        },
                                        "change": {
                                            "type": "array",
                                            "items": {
                                                "type": "number"
                                            },
                                            "example": [
                                                10,
                                                10
                                            ]
                                        },
                                        "remainingUserBalance": {
                                            "type": "number",
                                            "example": 120
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/restock": {
            "post": {
                "summary": "Restock a specific chocolate (max 10 pieces)",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "chocolateName",
                                    "quantity"
                                ],
                                "properties": {
                                    "chocolateName": {
                                        "type": "string",
                                        "example": "Toblerone"
                                    },
                                    "quantity": {
                                        "type": "number",
                                        "example": 5,
                                        "minimum": 1,
                                        "maximum": 10
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Chocolate restocked successfully"
                    },
                    "400": {
                        "description": "Invalid input or exceeds maximum stock limit (10)"
                    }
                }
            }
        },
        "/add-cash": {
            "post": {
                "summary": "Add cash to user balance",
                "tags": [
                    "Vending"
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "amount"
                                ],
                                "properties": {
                                    "amount": {
                                        "type": "number",
                                        "example": 50
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Cash added successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Successfully added â‚¹50"
                                        },
                                        "currentBalance": {
                                            "type": "number",
                                            "example": 100
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid input or server error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "error": {
                                            "type": "string",
                                            "example": "Amount must be greater than 0"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}