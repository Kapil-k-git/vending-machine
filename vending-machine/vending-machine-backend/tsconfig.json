{
  "compilerOptions": {
    "target": "ES2019",      
    "module": "commonjs",      
    "rootDir": "./src",            
    "outDir": "./dist",             
    "esModuleInterop": true,            
    "forceConsistentCasingInFileNames": true,
    "strict": true,                         
    "moduleResolution": "node",           
    "skipLibCheck": true                
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
